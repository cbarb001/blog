




<h1>current user = <%= current_user.email%></h1>

<div class="main">
  <% @posts.each do |p| %>
  	<div class="post">
		<%= p.title %> <br>
	    <%= p.content %> <br>
	    <% if current_user %>
	    	<%= link_to 'Edit', edit_post_path(p) %>
	    	<%= link_to 'Delete', post_path(p), method: :delete, data: { confirm: 'Are you sure?' } %>
	    <%end%>
	</div>
   <% end %>
   <% if current_user %>
	<div class = "newPost">
		<%= link_to 'Add New Post', new_post_path(@post) %>
	</div>
	<%end%>
	</div>
